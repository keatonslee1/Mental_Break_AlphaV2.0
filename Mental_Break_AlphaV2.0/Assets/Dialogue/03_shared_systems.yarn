title: SHOP_After
tags: #scene #shop
---
// Shop visits only occur on Day 1 of each run
<<if $current_run == 1 and $current_day == 1>>
    <<jump R1_D1_AfterShop>>
<<elseif $current_run == 2 and $current_day == 1>>
    <<jump R2_D1_AfterShop>>
<<elseif $current_run == 3 and $current_day == 1>>
    <<jump R3_D1_AfterShop>>
<<else>>
    // Fallback: This should not normally occur, but handle gracefully
    // If somehow shop is accessed outside Day 1, advance to next day start
    <<set $current_day += 1>>
    <<if $current_run == 1>>
        <<jump R1_D2_Start>>
    <<elseif $current_run == 2>>
        <<jump R2_D2_Start>>
    <<elseif $current_run == 3>>
        <<jump R3_D2_Start>>
    <<elseif $current_run == 4>>
        <<jump R4_PrepHub>>
    <<else>>
        <<jump R1_D2_Start>>
    <<endif>>
<<endif>>

===

